<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MVI Framework Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="24dp" />

    <Button
        android:id="@+id/btnLoadUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载用户列表"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="刷新数据"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="示例导航"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <Button
        android:id="@+id/btnEmptyStateDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="缺省页示例"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSkeletonDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="骨架屏示例"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnComprehensiveDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="综合示例"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnDialogDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog 示例"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnUserListDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MviUi 用户列表示例 (NEW)"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="24dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击按钮加载数据"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="#F5F5F5" />

    </ScrollView>

</LinearLayout>
